      AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
      AbsoluteLayout.LayoutFlags="All"
      BackgroundColor="#80000000"
      IsVisible="False">
      <ContentView
        x:Name="EditShiftPopup"
        Padding="{DynamicResource DynamicPadding}"
        AbsoluteLayout.LayoutBounds="0.5, 0.5, 400, 300"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        BackgroundColor="#F7EFE9">
        <Frame BackgroundColor="White" CornerRadius="{DynamicResource DynamicCornerRadius}">
          <VerticalStackLayout Spacing="{DynamicResource DynamicSpacing}">
            <Label
              FontAttributes="Bold"
              FontSize="{DynamicResource DynamicFontSizeTitle}"
              HorizontalOptions="Center"
              Text="CHỈNH SỬA CA LÀM"
              TextColor="Black" />
            <Frame
              Padding="{DynamicResource DynamicPadding}"
              BackgroundColor="Transparent"
              BorderColor="#F2E2D6"
              CornerRadius="{DynamicResource DynamicCornerRadius}">
              <Entry
                x:Name="EditShiftNameEntry"
                FontSize="{DynamicResource DynamicFontSizeMedium}"
                Placeholder="Tên ca (Ca 1, Ca 2, ...)" />
            </Frame>
            <Frame
              Padding="{DynamicResource DynamicPadding}"
              BackgroundColor="Transparent"
              BorderColor="#F2E2D6"
              CornerRadius="{DynamicResource DynamicCornerRadius}">
              <Entry
                x:Name="EditShiftTimeEntry"
                FontSize="{DynamicResource DynamicFontSizeMedium}"
                Placeholder="Thời gian (VD: 08:00-16:00)" />
            </Frame>
            <Grid ColumnDefinitions="*,*">
              <Button
                Grid.Column="0"
                BackgroundColor="#FAEBD7"
                Clicked="OnSaveEditShiftClicked"
                CornerRadius="{DynamicResource DynamicCornerRadius}"
                FontSize="{DynamicResource DynamicFontSizeMedium}"
                HorizontalOptions="Center"
                Text="Lưu" />
              <Button
                Grid.Column="1"
                BackgroundColor="Red"
                Clicked="OnCancelEditShiftClicked"
                CornerRadius="{DynamicResource DynamicCornerRadius}"
                FontSize="{DynamicResource DynamicFontSizeMedium}"
                HorizontalOptions="Center"
                Text="Hủy"
                TextColor="White" />
            </Grid>
          </VerticalStackLayout>
        </Frame>
      </ContentView>
    </Grid>
  </AbsoluteLayout>
</ContentPage>
