<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="PBL3_Interface.Pages.PromotionPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:PBL3_Interface.Pages;assembly=PBL3_Interface"
  BackgroundColor="#F7EFE9"
  ControlTemplate="{StaticResource SharedManagerPageTemplate}">
  <AbsoluteLayout>
    <!--  Tiêu đề  -->
    <Grid
      Margin="{DynamicResource DynamicMargin_Main}"
      AbsoluteLayout.LayoutBounds="0.5, 0.1, 0.95, 1"
      AbsoluteLayout.LayoutFlags="All"
      RowDefinitions="Auto,*">
      <Label
        Grid.Row="0"
        FontAttributes="Bold"
        FontSize="{DynamicResource DynamicFontSizeTitle}"
        HorizontalOptions="Center"
        Text="QUẢN LÝ ƯU ĐÃI 🎁"
        TextColor="Black"
        TextTransform="Uppercase" />

      <!--  Frame chứa nội dung chính  -->
      <Frame
        Grid.Row="1"
        Margin="{DynamicResource DynamicMargin}"
        Padding="{DynamicResource DynamicPadding}"
        BackgroundColor="#FFFFFF"
        BorderColor="Brown"
        CornerRadius="{DynamicResource DynamicCornerRadius}"
        HasShadow="False">
        <Grid
          BackgroundColor="Transparent"
          ColumnDefinitions="*, 2*, *"
          ColumnSpacing="{DynamicResource DynamicSpacing}">
          <!--  Cột 1: Thêm ưu đãi  -->
          <Frame
            Grid.Column="0"
            Padding="{DynamicResource DynamicPadding}"
            BackgroundColor="#4B3621"
            CornerRadius="{DynamicResource DynamicCornerRadius}"
            HasShadow="False">
            <VerticalStackLayout Spacing="{DynamicResource DynamicSpacing}">
              <Label
                FontAttributes="Bold"
                FontSize="{DynamicResource DynamicFontSizeLarge}"
                Text="THÊM ƯU ĐÃI"
                TextColor="White" />

              <!--  Tên ưu đãi  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Entry
                  Placeholder="Tên ưu đãi"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Mã ưu đãi  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Entry
                  Placeholder="Mã ưu đãi"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Mô tả  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Editor
                  AutoSize="TextChanges"
                  Placeholder="Mô tả"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Số tiền ưu đãi  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Entry
                  Placeholder="Giá trị"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Ngày bắt đầu / kết thúc  -->
              <Grid ColumnDefinitions="*,*" ColumnSpacing="{DynamicResource DynamicSpacing}">
                <Border
                  Padding="{DynamicResource DynamicPadding}"
                  Stroke="White"
                  StrokeThickness="1">
                  <Entry
                    Placeholder="DD/MM/YYYY"
                    TextColor="White"
                    VerticalOptions="Fill" />
                </Border>
                <Border
                  Grid.Column="1"
                  Padding="{DynamicResource DynamicPadding}"
                  Stroke="White"
                  StrokeThickness="1">
                  <Entry
                    IsEnabled="False"
                    Placeholder="DD/MM/YYYY"
                    TextColor="White"
                    VerticalOptions="Fill" />
                </Border>
              </Grid>
              <Button
                x:Name="AddButton"
                Padding="{DynamicResource DynamicPadding}"
                BackgroundColor="#FFFF99"
                Clicked="AddButton_Clicked"
                CornerRadius="{DynamicResource DynamicCornerRadius}"
                FontSize="{DynamicResource DynamicFontSizeMedium}"
                HorizontalOptions="Center"
                Text="Thêm"
                TextColor="Black" />
            </VerticalStackLayout>
          </Frame>

          <!--  Cột 2: Danh sách ưu đãi  -->
          <VerticalStackLayout Grid.Column="1" Spacing="{DynamicResource DynamicSpacing}">
            <!--  Bộ lọc  -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="{DynamicResource DynamicSpacing}">
              <Button
                x:Name="OngoingFilterButton"
                Grid.Column="0"
                Padding="{DynamicResource DynamicPadding}"
                BackgroundColor="#C41E3A"
                CornerRadius="{DynamicResource DynamicCornerRadius}"
                FontAttributes="Bold"
                HeightRequest="{DynamicResource DynamicButtonHeight}"
                Text="🔥 Đang diễn ra"
                TextColor="White" />
              <Button
                x:Name="UpcomingFilterButton"
                Grid.Column="1"
                Padding="{DynamicResource DynamicPadding}"
                BackgroundColor="#7B6A54"
                CornerRadius="{DynamicResource DynamicCornerRadius}"
                FontAttributes="Bold"
                HeightRequest="{DynamicResource DynamicButtonHeight}"
                Text="📅 Sắp tới"
                TextColor="White" />
              <Button
                x:Name="CompletedFilterButton"
                Grid.Column="2"
                Padding="{DynamicResource DynamicPadding}"
                BackgroundColor="#D4BFAA"
                CornerRadius="{DynamicResource DynamicCornerRadius}"
                FontAttributes="Bold"
                HeightRequest="{DynamicResource DynamicButtonHeight}"
                Text="📦 Đã kết thúc"
                TextColor="#4B3621" />
            </Grid>

            <!--  Danh sách ưu đãi  -->
            <ScrollView>
              <VerticalStackLayout Spacing="{DynamicResource DynamicSpacing}">
                <!--  Ưu đãi 1  -->
                <Frame
                  Padding="{DynamicResource DynamicPadding}"
                  BorderColor="#F2E2D6"
                  CornerRadius="{DynamicResource DynamicCornerRadius}"
                  HasShadow="False">
                  <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                      <Label
                        FontAttributes="Bold"
                        FontSize="{DynamicResource DynamicFontSizeMedium}"
                        Text="Giảm giá 20% toàn bộ menu"
                        TextColor="#4B3621" />
                      <Label
                        FontSize="{DynamicResource DynamicFontSizeSmall}"
                        Text="KM20MENU"
                        TextColor="#7B6A54" />
                    </VerticalStackLayout>
                    <Label
                      Grid.Row="0"
                      Grid.Column="1"
                      FontAttributes="Bold"
                      FontSize="{DynamicResource DynamicFontSizeMedium}"
                      Text="20%"
                      TextColor="#C41E3A"
                      VerticalOptions="Center" />
                    <Label
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      FontSize="{DynamicResource DynamicFontSizeSmall}"
                      Text="Áp dụng toàn menu từ 01/05 đến 31/05."
                      TextColor="#7B6A54" />
                  </Grid>
                </Frame>
                <!--  Ưu đãi 2  -->
                <Frame
                  Padding="{DynamicResource DynamicPadding}"
                  BorderColor="#F2E2D6"
                  CornerRadius="{DynamicResource DynamicCornerRadius}"
                  HasShadow="False">
                  <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                      <Label
                        FontAttributes="Bold"
                        FontSize="{DynamicResource DynamicFontSizeMedium}"
                        Text="Mua 1 tặng 1 - Trà Sữa Trân Châu"
                        TextColor="#4B3621" />
                      <Label
                        FontSize="{DynamicResource DynamicFontSizeSmall}"
                        Text="BOGO-TS"
                        TextColor="#7B6A54" />
                    </VerticalStackLayout>
                    <Label
                      Grid.Row="0"
                      Grid.Column="1"
                      FontAttributes="Bold"
                      FontSize="{DynamicResource DynamicFontSizeMedium}"
                      Text="1+1"
                      TextColor="#C41E3A"
                      VerticalOptions="Center" />
                    <Label
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      FontSize="{DynamicResource DynamicFontSizeSmall}"
                      Text="Áp dụng vào các ngày thứ 7, Chủ Nhật trong tháng 5."
                      TextColor="#7B6A54" />
                  </Grid>
                </Frame>
                <!--  Ưu đãi 3  -->
                <Frame
                  Padding="{DynamicResource DynamicPadding}"
                  BorderColor="#F2E2D6"
                  CornerRadius="{DynamicResource DynamicCornerRadius}"
                  HasShadow="False">
                  <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                      <Label
                        FontAttributes="Bold"
                        FontSize="{DynamicResource DynamicFontSizeMedium}"
                        Text="Ưu đãi thành viên - Giảm 10%"
                        TextColor="#4B3621" />
                      <Label
                        FontSize="{DynamicResource DynamicFontSizeSmall}"
                        Text="MEMBER10"
                        TextColor="#7B6A54" />
                    </VerticalStackLayout>
                    <Label
                      Grid.Row="0"
                      Grid.Column="1"
                      FontAttributes="Bold"
                      FontSize="{DynamicResource DynamicFontSizeMedium}"
                      Text="10%"
                      TextColor="#C41E3A"
                      VerticalOptions="Center" />
                    <Label
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      FontSize="{DynamicResource DynamicFontSizeSmall}"
                      Text="Áp dụng cho khách thành viên đăng ký trước ngày 15/05."
                      TextColor="#7B6A54" />
                  </Grid>
                </Frame>
              </VerticalStackLayout>
            </ScrollView>
          </VerticalStackLayout>

          <!--  Cột 3: Thông tin chi tiết ưu đãi  -->
          <Frame
            Grid.Column="2"
            Padding="{DynamicResource DynamicPadding}"
            BackgroundColor="#4B3621"
            CornerRadius="{DynamicResource DynamicCornerRadius}"
            HasShadow="False">
            <VerticalStackLayout Spacing="{DynamicResource DynamicSpacing}">
              <Label
                FontAttributes="Bold"
                FontSize="{DynamicResource DynamicFontSizeLarge}"
                Text="THÔNG TIN ƯU ĐÃI"
                TextColor="White" />

              <!--  Tên ưu đãi  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Entry
                  IsEnabled="False"
                  Text="Giảm giá 20% toàn bộ menu"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Mã ưu đãi  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Entry
                  IsEnabled="False"
                  Text="KM20MENU"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Mô tả  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Editor
                  AutoSize="TextChanges"
                  IsEnabled="False"
                  Text="Áp dụng cho toàn bộ thực đơn từ ngày 01/05 đến 31/05."
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Số tiền ưu đãi  -->
              <Border
                Padding="{DynamicResource DynamicPadding}"
                Stroke="White"
                StrokeThickness="1">
                <Entry
                  IsEnabled="False"
                  Text="20%"
                  TextColor="White"
                  VerticalOptions="Fill" />
              </Border>

              <!--  Ngày bắt đầu / kết thúc  -->
              <Grid ColumnDefinitions="*,*" ColumnSpacing="{DynamicResource DynamicSpacing}">
                <Border
                  Padding="{DynamicResource DynamicPadding}"
                  Stroke="White"
                  StrokeThickness="1">
                  <DatePicker
                    Date="2025-05-01"
                    IsEnabled="False"
                    TextColor="White"
                    VerticalOptions="Fill" />
                </Border>
                <Border
                  Grid.Column="1"
                  Padding="{DynamicResource DynamicPadding}"
                  Stroke="White"
                  StrokeThickness="1">
                  <DatePicker
                    Date="2025-05-31"
                    IsEnabled="False"
                    TextColor="White"
                    VerticalOptions="Fill" />
                </Border>
              </Grid>
              <HorizontalStackLayout HorizontalOptions="Center" Spacing="{DynamicResource DynamicSpacing}">
                <Button
                  x:Name="SaveButton"
                  Padding="{DynamicResource DynamicPadding}"
                  BackgroundColor="#D3D3D3"
                  Clicked="SaveButton_Clicked"
                  FontSize="{DynamicResource DynamicFontSizeMedium}"
                  Text="Lưu"
                  TextColor="Black" />
                <Button
                  x:Name="DeleteButton"
                  Padding="{DynamicResource DynamicPadding}"
                  BackgroundColor="#FF6347"
                  Clicked="DeleteButton_Clicked"
                  FontSize="{DynamicResource DynamicFontSizeMedium}"
                  Text="Xóa"
                  TextColor="White" />
              </HorizontalStackLayout>
            </VerticalStackLayout>
          </Frame>
        </Grid>
      </Frame>
    </Grid>
  </AbsoluteLayout>
</ContentPage>
