<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="PBL3_Interface.Pages.StaffPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  BackgroundColor="#F7EFE9"
  ControlTemplate="{StaticResource SharedManagerPageTemplate}">
  <VerticalStackLayout>
    <Label
      Margin="0,50,0,50"
      FontAttributes="Bold"
      FontSize="40"
      HorizontalOptions="Center"
      Text="QUẢN LÝ NHÂN VIÊN"
      TextColor="Black"
      VerticalOptions="End" />
    <Frame
      Padding="15"
      BackgroundColor="Transparent"
      CornerRadius="20"
      HasShadow="False">
      <Grid
        Padding="10"
        ColumnSpacing="15"
        RowSpacing="15">
        <!--  Định nghĩa cột: Sidebar trái (1*) + nội dung chính (3*)  -->
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Danh mục vai trò bên trái  -->
        <Frame
          Grid.Column="0"
          Padding="10"
          BackgroundColor="Pink"
          BorderColor="Transparent"
          CornerRadius="10"
          VerticalOptions="Center">
          <VerticalStackLayout Spacing="30">
            <Button
              Margin="0,0,0,0"
              Padding="10,5"
              BackgroundColor="#E5E5E5"
              CornerRadius="20"
              FontSize="30"
              Text="Tất cả" />
            <Button
              Margin="0,0,0,0"
              Padding="10,5"
              BackgroundColor="#E5E5E5"
              CornerRadius="20"
              FontSize="30"
              Text="Thu ngân" />
            <Button
              Margin="0,0,0,0"
              Padding="10,5"
              BackgroundColor="#E5E5E5"
              CornerRadius="20"
              FontSize="30"
              Text="Pha chế" />
            <Button
              Margin="0,0,0,0"
              Padding="10,5"
              BackgroundColor="#E5E5E5"
              CornerRadius="20"
              FontSize="30"
              Text="Phục vụ" />
          </VerticalStackLayout>
        </Frame>

        <!--  Nội dung bên phải  -->
        <VerticalStackLayout Grid.Column="1" Spacing="15">
          <!--  Hàng đầu: thanh tìm kiếm và nút  -->
          <Grid ColumnDefinitions="auto,*,auto,auto,auto">
            <Label
              Grid.Column="0"
              Margin="0,0,0,0"
              FontSize="20"
              Text="Tổng: 10"
              TextColor="Black"
              VerticalOptions="Center" />
            <Grid
              Grid.Column="1"
              Margin="10,0,10,0"
              Padding="5"
              BackgroundColor="Pink"
              ColumnDefinitions="*, Auto"
              HeightRequest="40"
              VerticalOptions="Center">
              <Frame BorderColor="Black">
                <Entry
                  Margin="5,0"
                  BackgroundColor="#FFF6FFE8"
                  FontSize="16"
                  Placeholder="Tìm kiếm..."
                  VerticalOptions="Center" />
              </Frame>
              <Button
                Margin="0,2,2,2"
                BackgroundColor="White"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="End"
                Text="Tìm"
                TextColor="Black"
                VerticalOptions="Center"
                WidthRequest="60" />
            </Grid>
            <Button
              Grid.Column="2"
              Margin="0,0,0,0"
              Padding="10,5"
              BackgroundColor="Red"
              CornerRadius="5"
              FontSize="30"
              HeightRequest="40"
              HorizontalOptions="End"
              Text="Xoá"
              TextColor="White" />
            <Button
              Grid.Column="3"
              Margin="0,0,0,0"
              Padding="10,5"
              BackgroundColor="#E5E5E5"
              CornerRadius="5"
              FontSize="30"
              HeightRequest="40"
              HorizontalOptions="End"
              Text="Thêm" />
          </Grid>

          <!--  Tiêu đề bảng  -->
          <Frame
            Padding="0"
            BackgroundColor="Transparent"
            BorderColor="Black"
            CornerRadius="0">
            <Grid
              BackgroundColor="Transparent"
              ColumnSpacing="1"
              RowSpacing="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="40" />
              </Grid.RowDefinitions>

              <Label
                Grid.Column="0"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Họ tên"
                TextColor="Black"
                VerticalOptions="Center" />
              <Label
                Grid.Column="1"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Ngày sinh"
                TextColor="Black"
                VerticalOptions="Center" />
              <Label
                Grid.Column="2"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Số điện thoại"
                TextColor="Black"
                VerticalOptions="Center" />
              <Label
                Grid.Column="3"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Địa chỉ"
                TextColor="Black"
                VerticalOptions="Center" />
              <Label
                Grid.Column="4"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Vị trí"
                TextColor="Black"
                VerticalOptions="Center" />
            </Grid>
          </Frame>

          <!--  Dữ liệu mẫu  -->
          <ScrollView BackgroundColor="Transparent">
            <CollectionView BackgroundColor="Transparent" ItemsSource="{Binding Employees}">
              <CollectionView.ItemTemplate>
                <DataTemplate>
                  <Frame
                    Margin="0,0,0,5"
                    Padding="0"
                    BackgroundColor="#F8E0E0"
                    BorderColor="Black"
                    CornerRadius="0">
                    <Grid BackgroundColor="#F8E0E0" ColumnSpacing="1">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>

                      <Label
                        Grid.Column="0"
                        Padding="5"
                        BackgroundColor="#F8E0E0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding Name}"
                        TextColor="Black"
                        VerticalOptions="Center" />
                      <Label
                        Grid.Column="1"
                        Padding="5"
                        BackgroundColor="#F8E0E0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding DOB}"
                        TextColor="Black"
                        VerticalOptions="Center" />
                      <Label
                        Grid.Column="2"
                        Padding="5"
                        BackgroundColor="#F8E0E0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding DOB}"
                        TextColor="Black"
                        VerticalOptions="Center" />
                      <Label
                        Grid.Column="3"
                        Padding="5"
                        BackgroundColor="#F8E0E0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding Address}"
                        TextColor="Black"
                        VerticalOptions="Center" />
                      <Label
                        Grid.Column="4"
                        Padding="5"
                        BackgroundColor="#F8E0E0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding Role}"
                        TextColor="Black"
                        VerticalOptions="Center" />
                    </Grid>
                  </Frame>
                </DataTemplate>
              </CollectionView.ItemTemplate>
            </CollectionView>
          </ScrollView>
        </VerticalStackLayout>
      </Grid>
    </Frame>
  </VerticalStackLayout>
</ContentPage>
